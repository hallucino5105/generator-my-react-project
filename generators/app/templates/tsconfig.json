{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "lib": ["es2018", "esnext", "dom"],
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "node",
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "strictPropertyInitialization": true,
    "noImplicitReturns": false,
    "removeComments": true,
    "resolveJsonModule": true,
    "pretty": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": true,
    "noEmit": false,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "typeRoots" : [
      "node_modules/@types",
      "./src/typings"
    ],
    "paths": {
      "src/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "ts-node": {
    "compilerOptions": {
      "target": "ES2015",
      "module": "CommonJS",
      "strict": false
    }
  }
}

